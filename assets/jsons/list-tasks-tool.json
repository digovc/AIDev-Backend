{
  "name": "list_tasks",
  "description": "Lista as tarefas do projeto",
  "input_schema": {
    "type": "object",
    "required": [
      "status"
    ],
    "properties": {
      "status": {
        "description": "Filtro por status da tarefa",
        "type": "string",
        "enum": [
          "all",
          "backlog",
          "running",
          "done"
        ]
      }
    }
  }
}
